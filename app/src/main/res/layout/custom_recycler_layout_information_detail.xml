<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_recycler_detail"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_detail"
        android:src="@drawable/lamdt16"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name_detail"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bellerose"
                android:textSize="16sp"
                android:text="Nguyễn Văn Nam"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:textColor="@color/colorWhite"
                android:text="0965 795 095"
                android:paddingLeft="10dp"
                android:fontFamily="@font/bellerose"
                android:gravity="center"
                android:textSize="14sp"
                android:id="@+id/txt_phone_detail"
                android:layout_weight="0.8"
                android:drawableLeft="@drawable/phone_24"
                android:background="@drawable/custom_btn_phone"
                android:layout_width="0dp"
                android:layout_height="24dp"/>

        </LinearLayout>

 <TextView
     android:id="@+id/txt_role_detail"
     android:fontFamily="@font/bellerose"
     android:textColor="@android:color/black"
     android:text="Android Developer"
     android:textSize="16sp"
     android:layout_marginTop="10dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_email_detail"
            android:fontFamily="@font/bellerose"
            android:textColor="@color/colorWhenClick"
            android:text="LamDT16@viettel.com.vn"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

</LinearLayout>