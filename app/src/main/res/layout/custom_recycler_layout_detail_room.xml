<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="15dp"
    android:background="@drawable/bg_linear"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/bg_linear2"
            android:layout_width="120dp"
            android:layout_height="120dp">
        <TextView
            android:gravity="center"
            android:id="@+id/txt_dayOfWeek"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:text="Thứ 3"
            android:fontFamily="@font/bellerose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/bellerose"
                android:layout_marginTop="5dp"
                android:text="25/06/2020"
                android:textColor="@color/colorWhite"
                android:id="@+id/txt_date_of_year"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <LinearLayout
        android:weightSum="3"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:fontFamily="@font/bellerose"
            android:text="Họp giao ban với các đơn vị khác trong công ty"
            android:textColor="@color/textColorHome"
            android:textSize="17sp"
            android:layout_weight="2"
            android:id="@+id/txt_title_meeting"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/open_door_brow"
                    android:scaleType="fitXY"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/bellerose"
                    android:id="@+id/txt_address_home"
                    android:paddingTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Phòng 2 - Tầng 2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/time_brown"
                    android:scaleType="fitXY"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/bellerose"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/txt_time_home"
                    android:paddingTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center_vertical|left"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="09:00 - 11:30"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/account_brown"
                    android:scaleType="fitXY"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="@font/bellerose"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/txt_count_member_home"
                    android:paddingTop="3dp"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="300"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>