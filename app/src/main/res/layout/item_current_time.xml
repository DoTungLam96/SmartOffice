<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="45dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    android:background="@drawable/relativelayout_custom_create">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ln_pare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/colorPDF"
                android:layout_above="@id/ln"
                android:id="@+id/v_left"
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <RelativeLayout
                android:id="@+id/ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/v_left">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textStyle="bold"
                        android:fontFamily="@font/bellerose"
                        android:id="@+id/tv_name_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Mathematics"
                        android:textColor="#000000"
                        android:textSize="19dp" />

                    <TextView
                        android:fontFamily="@font/bellerose"
                        android:id="@+id/tv_time_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="10:00 AM — 10:30 AM"
                        android:textColor="#69696E"
                        android:textSize="16dp" />

                    <TextView
                        android:fontFamily="@font/bellerose"
                        android:id="@+id/tv_class_name_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Class 1"
                        android:textColor="#69696E"
                        android:textSize="16dp" />

                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@font/bellerose"
                        android:id="@+id/tv_room_courses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:text="Room 204 • Classroom 2"
                        android:textColor="#69696E"
                        android:textSize="15dp" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</androidx.cardview.widget.CardView>
