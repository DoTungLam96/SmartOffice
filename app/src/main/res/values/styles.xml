<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>                   <!--header background-->
        <item name="android:windowBackground">#323130</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item> <!--selected day-->
        <item name="android:textColorPrimary">#FFFFFF</item> <!--days of the month-->
        <item name="android:textColorSecondary">#FFFFFF</item>    <!--days of the week-->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFFFFF</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorNavigation</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogTheme_Time" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColorPrimary">#000000</item> <!--days of the month-->
        <item name="android:textColorSecondary">#7C7871</item>    <!--days of the week-->
    </style>
</resources>